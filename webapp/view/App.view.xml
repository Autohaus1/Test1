	<App>
		<pages>
			<Page title="Meine erste App">
				<content><Slider id="Slider1" value="{dataModel>/value1}" change="onSliderChange"/>
					<Text text="{path: 'dataModel>/value1'}"/>
					<Slider id="Slider2" value="{model: 'dataModel', path: '/value2'}" change="onSliderChange"/>
					<Text text="{dataModel>/value2}"/>
					<Button text="Blödsinn" tooltip="Tooltip Blödsinn"/>
